<% layout("/layouts/boilerplate") -%>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.6;
            text-decoration: none;
            color: black;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }
        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            padding: 1rem;
            margin-left: 1.7rem;
            display: flex;
            align-items: center;
            margin-top: 1rem;
        }

        /* Default: hide hint */
.scroll-hint-text {
  display: none;
}

/* Mobile & Tablet only */
@media (max-width: 1400px) {
  #filters {
    flex-wrap: nowrap;
    overflow-x: auto;
    white-space: nowrap;
    scrollbar-width: none;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
  }

  /* Floating hint */
  .scroll-hint-text {
    display: block;
    position: absolute;
    right: 1rem;
    top: 5.4rem; /* adjust if navbar height changes */
    font-size: 0.85rem;
    color: blue;
    pointer-events: none;
    animation: fadeHint 1.6s ease-in-out infinite;
  }
}

/* Fade animation */
@keyframes fadeHint {
  0% {
    opacity: 0.2;
  }
  50% {
    opacity: 0.7;
  }
  100% {
    opacity: 0.2;
  }
}

    </style>

    <body>
       <% if (noResultsMessage) { %>
        <div class="d-flex justify-content-center mt-3">
            <div class="alert alert-danger alert-dismissible fade show text-center"
                style="max-width: 420px; width: 100%;">
                <%= noResultsMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
        <div id="filters">

            <a href="/listings?category=Trending" class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>

            <a href="/listings?category=Rooms" class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>

            <a href="/listings?category=Iconic Cities" class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>

            <a href="/listings?category=Mountains" class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>

            <a href="/listings?category=Castles" class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>

            <a href="/listings?category=Heritage" class="filter">
                <div><i class="fa-solid fa-landmark"></i></div>
                <p>Heritage</p>
            </a>

            <a href="/listings?category=Amazing Pools" class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>

            <a href="/listings?category=Camping" class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
